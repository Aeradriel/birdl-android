<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Login"
    android:id="@+id/mainview">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/user_pwd"
        android:textColor="#A1A1A1"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:text="@string/pwd_2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/user_email"
        android:textColor="#A1A1A1"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:autoText="false"
        android:text="@string/email_2" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:id="@+id/imageView"
        android:contentDescription="@string/birdl_logo_string"
        android:background="@drawable/logo_birdl"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/connect_fr"
        android:id="@+id/connect_button"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/button4" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_up_login"
        android:id="@+id/button4"
        android:layout_alignTop="@+id/connect_button"
        android:layout_alignEnd="@+id/imageView" />

</RelativeLayout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Login"
    android:id="@+id/mainview"
    android:background="@drawable/website_wallpaper">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/email"
        android:id="@+id/textView2"
        android:textColor="#FFF"
        android:layout_alignTop="@+id/textView3"
        android:layout_toStartOf="@+id/imageView"
        android:layout_marginEnd="38dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/password_fr"
        android:id="@+id/textView3"
        android:textColor="#FFF"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/imageView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/user_pwd"
        android:textColor="#A1A1A1"
        android:layout_below="@+id/textView3"
        android:layout_toStartOf="@+id/connect_button" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/user_email"
        android:textColor="#A1A1A1"
        android:layout_above="@+id/connect_button"
        android:layout_toEndOf="@+id/connect_button" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:contentDescription="@string/birdl_logo_string"
        android:background="@drawable/text_logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/connect_fr"
        android:id="@+id/connect_button"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/user_pwd"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
